@{
    Layout = "~/Views/Shared/_Error_Layout.cshtml";
}


<div class="flex items-center items-center bg-white py-6 sm:py-8 lg:py-12">
    <div class="mx-auto max-w-screen-xl px-4 md:px-8">
        <div class="grid gap-8 sm:grid-cols-2">
            <!-- content - start -->
            <div class="flex flex-col items-center justify-center sm:items-start md:py-24 lg:py-32">
                <p class="mb-4 text-sm font-semibold uppercase md:text-base">Error 404</p>
                <h1 class="mb-2 text-center text-2xl font-bold text-gray-800 sm:text-left md:text-3xl">Page not found</h1>

                <p class="mb-8 text-center text-gray-500 sm:text-left md:text-lg">The page you’re looking for doesn’t exist.</p>

                <a asp-action="index" asp-controller="Home" class="inline-block rounded-lg bg-orange-500 px-8 py-3 text-center text-sm font-semibold text-white outline-none ring-orange-300 transition duration-100 hover:bg-orange-600 focus-visible:ring active:text-orange-700 md:text-base">Go home</a>
            </div>
            <!-- content - end -->
            <!-- image - start -->
            <div class="relative h-auto w-auto overflow-hidden md:h-auto">
                <img src="~/assets/images/ev3sadface.png" loading="lazy" alt="Photo" class="absolute inset-0 h-full w-full object-cover object-center" />
            </div>
            <!-- image - end -->
        </div>
    </div>
</div>
